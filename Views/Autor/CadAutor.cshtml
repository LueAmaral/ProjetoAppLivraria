@model ProjetoAppLivraria.Models.Autor

@{
    ViewData["Title"] = "CadAutor";
}

<h1>Cadastrar Autor</h1>

<h4>Autor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CadAutor" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="nomeAutor" class="control-label"></label>
                <input asp-for="nomeAutor" class="form-control" />
                <span asp-validation-for="nomeAutor" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Status" class="control-label">Situação</label>
                <select asp-for="Status" class="form-control">
                    <option value="1">Disponível</option>
                    <option value="2">Indisponível</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a listat</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
